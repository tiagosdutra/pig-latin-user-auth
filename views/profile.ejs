<!doctype html>
<html>

<head>
  <title>Pig Latin Users Anonymous</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body class="backgroundImage">
  <div class="container">

    <div class="well page-header text-center">
      <h1><span class="fa fa-pencil-square"></span> Message Log</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
      </div>
      <div class="well col-sm-6">

        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="messages">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><i class="pig fa fa-pencil" aria-hidden="true"></i></span>
              <span><i class="fa fa-ban" aria-hidden="true"></i></span>
            </li>
          <% } %>
        </ul>
      </div>
      <% } %>
    </div>

